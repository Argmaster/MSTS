{% extends "bootstrap.html.jinja2" %}
{% block head %}
<script src="/static/auth.js"></script>
{% endblock %}
{% block title %} Log in {% endblock %}
{% block body %}
<main>
    <div class="container text-center min-vh-100 d-flex flex-column">
        <div class="row align-items-center justify-content-center flex-grow-1">
            <div class="col-11 col-sm-9 col-md-6 col-lg-5 col-xl-4 col-xxl-3">
                <div>
                    <h2 class="mb-5">Log in</h2>
                    <div class="mb-3">
                        <label for="usernameInputField" class="form-label">User name</label>
                        <input type="text" class="form-control" id="usernameInputField" name="username"
                            autocomplete="username">
                    </div>
                    <div class="mb-5">
                        <label for="passwordInputField" class="form-label">Password</label>
                        <input type="password" class="form-control" id="passwordInputField" name="password"
                            autocomplete="current-password">
                    </div>
                    <button type="button" class="btn btn-primary" onclick="authenticate()">Submit</button>
                </div>
            </div>
        </div>
    </div>
</main>
{% endblock%}
